{
  // Editor
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.rulers": [100],

  // Files
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  // TypeScript
  "typescript.tsdk": "node_modules/typescript/lib",

  /************************************************************************************************
   * Mocha Test Explorer
   ***********************************************************************************************/

  // Search for spec files in the tests directory
  "mochaExplorer.files": "tests/**/*.spec.ts",

  // Ensure tests are run in test environment (loads correct config files)
  "mochaExplorer.env": {
    "NODE_ENV": "test"
  },

  "mochaExplorer.envPath": ".env"
}
